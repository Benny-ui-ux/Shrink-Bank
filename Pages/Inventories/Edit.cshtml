@model Shrink_Bank.Pages.Inventories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inventory.InventoryID" />
            <div class="form-group">
                
                <label asp-for="Inventory.InventoryName" class="control-label"></label>
                <input asp-for="Inventory.InventoryName" class="form-control" />
                <span asp-validation-for="Inventory.InventoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Inventory.Department" class="control-label"></label>
                <input asp-for="Inventory.Department" class="form-control" />
                <span asp-validation-for="Inventory.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Inventory.Price" class="control-label"></label>
                <input asp-for="Inventory.Price" class="form-control" />
                <span asp-validation-for="Inventory.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Inventory.Quantity" class="control-label"></label>
                <input asp-for="Inventory.Quantity" class="form-control" />
                <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Inventory.ExpirationDate" class="control-label"></label>
                <input asp-for="Inventory.ExpirationDate" class="form-control" />
                <span asp-validation-for="Inventory.ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

